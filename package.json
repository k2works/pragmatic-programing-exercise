{
  "name": "pragmatic-programing-exercise",
  "version": "1.0.0",
  "description": "プログラミング練習",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "nf start -j Procfile",
    "app": "browser-sync start -s ./ --watch --port 8080 --ui-port 8081",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "watch": "webpack --watch --config webpack.dev.config.js",
    "build": "webpack --config webpack.config.js",
    "deploy:local": "vercel dev",
    "deploy": "vercel",
    "e2e": "cypress open",
    "e2e:headless": "cypress run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k2works/pragmatic-programing-exercise.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/k2works/pragmatic-programing-exercise/issues"
  },
  "homepage": "https://github.com/k2works/pragmatic-programing-exercise#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "browser-sync": "^2.26.14",
    "cpx": "^1.5.0",
    "cypress-cucumber-preprocessor": "^4.0.0",
    "foreman": "^3.0.1",
    "html-webpack-plugin": "^4.5.1",
    "jest": "^26.6.3",
    "marked": "^1.2.8",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3",
    "watch": "^1.0.2",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "cypress": "^6.3.0",
    "express": "^4.17.1",
    "uuid": "^8.3.2"
  },
  "cypress-cucumber-preprocessor": {
    "step_definitions": "cypress/support/step_definitions/",
    "nonGlobalStepDefinitions": false
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/**/*.test.ts"
    ]
  }
}
